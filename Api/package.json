{
  "name": "api",
  "version": "3.0.0",
  "description": "Api",
  "main": "src/app.ts",
  "scripts": {
    "exec-builder": "ts-node bin/builder.ts && echo \"\\033[0;34m➤ Builder executed \\033[0m\"",
    "compile-addon": "cmake-js compile -d ./src/addons/ && echo \"\\033[0;34m➤ Addon compiled \\033[0m\"",
    "watch-compile-api-": "tsc --build --watch && echo \"\\033[0;34m➤ API watch compile \\033[0m \"",
    "compile-api-": "tsc --build && echo \"\\033[0;34m➤ API compiled \\033[0m \"",
    "build": "npm run compile-addon && npm run exec-builder && npm run compile-api",
    "watch-build": "npm run compile-addon && npm run exec-builder && npm run watch-compile-api",
    "watch-start": "node --watch prod/app.js",
    "start": "node prod/app.js",
    "test": "jest -c jest.config.json",
    "test:watch": "jest --watch -c jest.config.json",
    "lint": "eslint . --ext .ts",
    "fix-lint": "eslint --fix . --ext .ts"
  },
  "keywords": [],
  "author": "Ruby",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.3.0",
    "express-validator": "^6.14.2",
    "helmet": "^5.0.2",
    "knex": "^1.0.6",
    "knex-migrate-sql-file": "^1.0.3",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.3",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bindings": "^1.5.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.3",
    "@types/jest": "^29.2.3",
    "@types/nodemailer": "^6.4.4",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "binding": "^3.0.3",
    "cmake-js": "^6.3.2",
    "eslint": "8.15.0",
    "jest": "^29.3.1",
    "node-addon-api": "^5.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
